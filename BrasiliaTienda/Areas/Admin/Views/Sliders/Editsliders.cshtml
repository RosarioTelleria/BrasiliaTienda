@model BrasiliaTiendaModelo.Models.Slider
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center"> Edita  un nuevo Slider</h3>
<form method="post" asp-action="Editsliders" enctype="multipart/form-data">

    
    <input type="hidden" asp-for="Id" />


    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Estado"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Estado"/>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UrlImagen"></label>
                </div>
                <div class="col-8">
                    <input type="file" name ="archivos" id="subidaArchivo" class="form-control" />
                    <span asp-validation-for="UrlImagen" class="text-danger"></span>

                </div>
            </div>

            <div class="form-group row">
                    <div class="col">
                       <button type="submit" class="btn btn-primary form-control" asp-rout-id="@Model.Id">Actualizar</button>
                                &nbsp;
                    </div>
                <div class="col">
                    <a asp-action="index" class="btn btn-success form-control">Volver Lista</a>"
                    </div>
                </div>

            </div>
        <div class="col-4 pt-3">
            <img src="@Model.UrlImagen" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;" />
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        <script src="https://cdn.tiny.cloud/1/sm21p9ou6y7e9on4zn1hmepv6rydadx0oo7k7b4gf76itm7l/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
        <script>
        tinymce.init({
        selector: 'textarea',
        plugins: 'lists',
        menubar: 'file edit format'
    });

</script>
}